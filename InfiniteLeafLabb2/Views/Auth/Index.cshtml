@{
    ViewData["Title"] = "Admin Login";
}

<div class="flex flex-col justify-center items-center min-h-[70vh] px-4">
    <div class="rounded-2xl shadow-2xl w-full max-w-md p-8"
         style="background-color: rgba(39, 57, 28, 0.4); border: 2px solid rgba(37, 95, 56, 0.3); backdrop-filter: blur(12px);">

        <div class="text-center mb-8">
            <div class="text-5xl mb-4">🍃</div>
            <h1 class="text-4xl font-bold mb-2 text-white">Infinite Leaf</h1>
            <p class="text-gray-400">Admin Portal</p>
            <div class="h-1 w-20 mx-auto mt-4" style="background: linear-gradient(to right, transparent, #1F7D53, transparent);"></div>
        </div>

        @if (ViewBag.Error != null)
        {
            <div class="px-4 py-3 rounded-lg mb-6" style="background-color: rgba(239, 68, 68, 0.1); border: 1px solid rgba(239, 68, 68, 0.3); color: #FCA5A5;">
                @ViewBag.Error
            </div>
        }

        <form method="post" asp-action="Login" asp-controller="Auth" class="space-y-6">
            <div>
                <label for="username" class="block text-sm font-medium mb-2 text-gray-300">
                    Username
                </label>
                <input type="text"
                       id="username"
                       name="username"
                       required
                       class="w-full px-4 py-3 rounded-lg outline-none transition focus:border-emerald-500"
                       style="background-color: #18230F; border: 1px solid rgba(37, 95, 56, 0.5); color: #FFFFFF;"
                       placeholder="Enter your username">
            </div>

            <div>
                <label for="password" class="block text-sm font-medium mb-2 text-gray-300">
                    Password
                </label>
                <input type="password"
                       id="password"
                       name="password"
                       required
                       class="w-full px-4 py-3 rounded-lg outline-none transition focus:border-emerald-500"
                       style="background-color: #18230F; border: 1px solid rgba(37, 95, 56, 0.5); color: #FFFFFF;"
                       placeholder="Enter your password">
            </div>

            <button type="submit"
                    class="w-full text-white font-semibold py-3 rounded-lg transition-all duration-300 transform hover:scale-[1.02] active:scale-95 shadow-lg"
                    style="background: linear-gradient(to right, #255F38, #1F7D53);">
                Sign In
            </button>
        </form>

        <div class="mt-6 text-center">
            <a href="@Url.Action("Index", "Home")"
               class="text-sm font-medium transition-colors hover:text-emerald-400 inline-flex items-center gap-2"
               style="color: #1F7D53;">
                <span>←</span> Back to Home
            </a>
        </div>
    </div>
</div>